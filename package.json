{
  "name": "test",
  "version": "1.0.0",
  "description": "sass to css",
  "main": "index.js",
  "scripts": {
    "build": "npm run css && npm run watch",
    "css": "node-sass --include-path scss scss/style.scss css/style.css",
    "watch": "nodemon -e scss -x \"npm run css\"",
    "serve": "http-server"
  },
  "hint": "npm run build",
  "author": "",
  "devDependencies": {
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0"
  }
}
